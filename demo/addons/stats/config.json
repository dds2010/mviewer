{
  "js": ["js/stats.js", "js/jquery.easyDrag.min.js"],
  "css": "css/stats.css",
  "html": "stats.html?v=2",
  "target": "page-content-wrapper",
  "options": {
    "mviewer":{
      "stats":{
        "tooltipPosition": "bottom-left",
        "title": "Statistiques sur les structures et la population des communes",
        "open": true,
        "style": {
          "border": "1px #2e5367 solid",
          "background": "white",
          "text": "black",
          "colorButton": "#2e5367"
        },
        "stats": [
          {
            "type": "stat",
            "layerId": "population_communes",
            "field": "",
            "template":"<span><span class='stat_value'>{x}</span> Communes</span>",
            "operator": "COUNT",
            "__operator": "SUM,MAX,MEAN,COUNT"
          },
          {
            "type": "stat",
            "layerId": "population_communes",
            "field": "population",
            "template":"<span class='structcss'>{x} Habitants</span>",
            "operator": "SUM",
            "__operator": "SUM,MAX,MEAN,COUNT"
          },
          {
            "type": "stat",
            "layerId": "population_communes",
            "field": "population",
            "template":"<span class='structcss'>Population moyenne<br> par commune: {x} Habitants</span>",
            "operator": "MEAN",
            "__operator": "SUM,MAX,MEAN,COUNT"
          },
        {
          "type": "stat",
          "layerId": "structures",
          "field": "form_jur",
          "template":"<span class='structcss'>Structures :<br> {x} Objets</span>",
          "operator": "COUNT",
          "__operator": "SUM,MAX,MEAN,COUNT"
        },
        {
          "type": "stat",
          "layerId": "population_communes",
          "field": "population",
          "template":"plus petite commune : {x} habitants",
          "operator": "MIN",
          "__operator": "SUM,MAX,MEAN,COUNT"
        },
        {
          "type": "stat",
          "layerId": "population_communes",
          "field": "population",
          "template":"plus grande commune : {x} habitants ",
          "operator": "MAX",
          "__operator": "SUM,MAX,MEAN,COUNT"
        }
      ]
      }
    }
  }
}
